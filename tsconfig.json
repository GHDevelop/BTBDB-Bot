{
    "compilerOptions": {
        "target": "es6",
        "module": "commonjs",
        "noImplicitAny": true,
        "removeComments": true,
        "preserveConstEnums": true,
        "sourceMap": true,
        "strictNullChecks": true,
        "baseUrl": "./src/",
        "outDir": "./dist/",
        "resolveJsonModule": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
    },
    "compileOnSave": true,
    "include": [
        "src/**/*.ts", "boot.ts"
    ],
    "exclude": [
        "node_modules",
        "examples",
        "modules/ideas/storage/ideas.json"
    ]
}