{
    "compilerOptions": {
        "target": "es6",
        "module": "commonjs",
        "noImplicitAny": true,
        "removeComments": true,
        "preserveConstEnums": true,
        "sourceMap": true,
        "baseUrl": "./src/",
        "outDir": "./dist/",
        "resolveJsonModule": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "paths": {
            "commandsPattern": [
                "modules/*/command/"
            ]
        }
    },
    "compileOnSave": true,
    "include": [
        "src/**/*.ts", "boot.ts"
    ],
    "exclude": [
        "node_modules"
    ]
}